<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true"
             x:Class="FirstXamarinApp.SettingsPage"
             NavigationPage.Title="Settings">
    <ScrollView>
    <StackLayout Margin="20">
        <Grid Margin="0, 0, 0, 20">
            <Label Text="Dark theme:"
                   VerticalTextAlignment="Center"
                   Grid.Row="0" Grid.Column="0"/>
            <Switch HorizontalOptions="End"
                    Grid.Row="0" Grid.Column="1"
                    x:Name="Theme"
                    Toggled="ChangeTheme"/>
            <Label Text="Font Size (22):"
                   VerticalTextAlignment="Center"
                   Grid.Row="1" Grid.Column="0"/>
            <Slider Grid.Row="1" Grid.Column="1"/>
            <Label Text="Notifications:" 
                   VerticalTextAlignment="Center"
                   Grid.Row="2" Grid.Column="0"/>
            <Switch HorizontalOptions="End"
                    Grid.Row="2" Grid.Column="1"/>
            <Label Text="Stay logged:" 
                   VerticalTextAlignment="Center"
                   Grid.Row="3" Grid.Column="0"/>
            <Switch HorizontalOptions="End"
                    Grid.Row="3" Grid.Column="1"/>

            
            <Picker Title="Positions"
                    Grid.Row="5" Grid.ColumnSpan="2"/>
             
            <Button Text="Add Position" 
                Grid.Row="6" Grid.Column="0"
                    Clicked="ToAddPositionPage"/>
            <Button Text="Configure Position" 
                Grid.Row="6" Grid.Column="1"
                    Clicked="ToEditPositionPage"/>
        </Grid>
        
                 
        <Button Text="Sign Out"
                BackgroundColor="Red"
                TextColor="White"
                HeightRequest="40"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="ToSignInPage"/>
    </StackLayout>
    </ScrollView>
</ContentPage>
